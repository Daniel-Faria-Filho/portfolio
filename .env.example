# Site Configuration
# The name displayed throughout the site
SITE_NAME="Your Name"

# Text appended to browser tab titles
SITE_TITLE_SUFFIX=" - Your Title"

# Text displayed in the header logo (supports HTML-like syntax)
SITE_LOGO_TEXT="<Your.Name>"

# Your website's domain name
SITE_DOMAIN="yourdomain.com"

# Feature Flags
SHOW_DRONE_SERVICES="false"

# Contact Information
# Main contact email for the contact form
CONTACT_EMAIL="contact@yourdomain.com"

# Contact phone number (include country code and formatting)
CONTACT_PHONE="+1 (123) 456-7890"

# Your Discord username without discriminator
CONTACT_DISCORD="your_discord"

# Social Media
# Full URL to your GitHub profile
GITHUB_URL="https://github.com/yourusername"

# Full URL to your LinkedIn profile
LINKEDIN_URL="https://linkedin.com/in/yourusername"

# Admin Configuration
# Administrator email for special permissions
ADMIN_EMAIL="admin@yourdomain.com"

# Full name used in copyright notices
COPYRIGHT_NAME="Your Full Legal Name"

# Stripe Integration
# Your Stripe secret key (from Dashboard → Developers → API keys)
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"

# Your Stripe publishable key
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"

# Webhook signing secret from Stripe Dashboard
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Annual hosting price in USD (numbers only)
HOSTING_YEARLY_PRICE="25"

# Stripe Price ID for the annual hosting product
HOSTING_YEARLY_PRICE_ID="price_your_price_id"

# Database Configuration
# Your MongoDB connection string
MONGODB_URI="mongodb+srv://username:password@your-cluster.mongodb.net/your-database"

# Random secure string for JWT token encryption
JWT_SECRET="your_very_secure_jwt_secret"

# Email Service Configuration
# SMTP server hostname
SMTP_HOST="smtp.gmail.com"

# SMTP server port (usually 587 for TLS)
SMTP_PORT="587"

# Email account username
SMTP_USER="your@email.com"

# Email account password or app-specific password
SMTP_PASS="your_email_password_or_app_password"

# Address that sends automated emails
EMAIL_FROM_ADDRESS="noreply@yourdomain.com"

# Name shown in email "from" field
EMAIL_FROM_NAME="Your Name"

# Address for system notifications
EMAIL_NOREPLY_ADDRESS="noreply@yourdomain.com" 