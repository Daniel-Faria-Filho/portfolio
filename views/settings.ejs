<%- include('partials/header') %>

<div class="settings-container">
    <div class="settings-card">
        <h2>
            <i class="fas fa-lock"></i>
            Change Password
        </h2>
        <form id="password-form">
            <div class="form-group">
                <label for="current-password">Current Password</label>
                <input type="password" id="current-password" required>
            </div>
            
            <div class="form-group">
                <label for="new-password">New Password</label>
                <input type="password" id="new-password" required>
            </div>
            
            <div class="form-group">
                <label for="confirm-password">Confirm New Password</label>
                <input type="password" id="confirm-password" required>
            </div>
            
            <button type="submit" class="update-button">Update Password</button>
        </form>
    </div>

    <div class="settings-card">
        <div class="danger-zone">
            <h2>
                <i class="fas fa-exclamation-triangle"></i>
                Account Management
            </h2>
            <p class="warning-text">Warning: These actions cannot be undone.</p>
            
            <button onclick="deactivateAccount()" class="danger-button">
                Deactivate Account
            </button>
            
            <button onclick="deleteAccount()" class="danger-button">
                Delete Account
            </button>
        </div>
    </div>
</div>

<script>
async function updatePassword(e) {
    e.preventDefault();
    // Your password update logic here
}

async function deactivateAccount() {
    // Your deactivation logic here
}

async function deleteAccount() {
    // Your deletion logic here
}

document.getElementById('password-form').addEventListener('submit', updatePassword);
</script>

