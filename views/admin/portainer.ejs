<%- include('../partials/header') %>

<div class="portainer-container">
    <iframe 
        src="/administration/portainer-proxy/"
        frameborder="0" 
        style="width: 100%; height: 100%;"
        sandbox="allow-same-origin allow-scripts allow-forms allow-popups"
        allow="clipboard-read; clipboard-write"
    ></iframe>
</div>

<style>
.portainer-container {
    position: fixed;
    top: 60px;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--bg);
    z-index: 1;
    overflow: hidden;
}

/* Hide footer in portainer view */
footer {
    display: none;
}

/* Ensure iframe takes full space */
iframe {
    display: block;
    width: 100%;
    height: 100%;
    border: none;
}
</style>

<%- include('../partials/footer') %> 